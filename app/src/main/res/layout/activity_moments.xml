<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MomentsActivity">

    <ImageView
        android:id="@+id/iv_moments_head"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/AliceBlue"
        android:contentDescription="@string/moments_head_background"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/SkyBlue"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/iv_user_avatar"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/user_avatar"
        android:scaleType="centerCrop"
        android:translationY="-60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_moments_head"
        tools:background="@color/LightCoral" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/White"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_moments_head"
        app:layout_constraintEnd_toStartOf="@id/iv_user_avatar"
        tools:text="姜饼小框" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/back"
        android:src="@drawable/vector_arrow_left_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/back"
        android:paddingStart="10dp"
        android:paddingTop="34dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp"
        android:src="@drawable/vector_photo_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>